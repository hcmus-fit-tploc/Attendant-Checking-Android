<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hoangdang.diemdanh.studentQuiz.AnswerActivity"
    android:background="@color/white">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_ll"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_quiz"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary_darker"
            android:layout_gravity="center"
            app:popupTheme="@style/AppTheme.PopupOverlay"/>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_marginLeft="20dip"
        android:layout_below="@id/toolbar_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/quiz_name"
            android:text="Quiz name"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/quiz_noti"
            android:layout_below="@id/quiz_name"
            android:text="Question 1/3"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:layout_below="@id/quiz_noti"
            android:id="@+id/answer_1"
            android:layout_width="170dip"
            android:layout_height="200dip"
            android:textSize="40sp"
            android:text="A" />

        <Button
            android:layout_below="@id/quiz_noti"
            android:layout_toRightOf="@id/answer_1"
            android:id="@+id/answer_2"
            android:layout_width="170dip"
            android:layout_height="200dip"
            android:textSize="40sp"
            android:text="B"/>

        <Button
            android:layout_below="@id/answer_1"
            android:id="@+id/answer_3"
            android:layout_width="170dip"
            android:layout_height="200dip"
            android:textSize="40sp"
            android:text="C"/>

        <Button
            android:layout_toRightOf="@id/answer_3"
            android:layout_below="@id/answer_2"
            android:id="@+id/answer_4"
            android:layout_width="170dip"
            android:layout_height="200dip"
            android:textSize="40sp"
            android:text="D"/>
    </RelativeLayout>

</RelativeLayout>
