<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hoangdang.diemdanh.Fragments.ProfileFragment"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/deep"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_img"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:src="@drawable/usericon"
                app:civ_border_width="0dp"/>
        </LinearLayout>

        <LinearLayout
            android:paddingTop="5dp"
            android:paddingRight="24dp"
            android:paddingLeft="24dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:paddingLeft="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <TextView
                    android:textColor="@color/aluminum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="First name"
                    android:layout_marginRight="30dp"
                    android:textSize="15sp"/>
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/first_name_tv"
                    android:textSize="20sp"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="John"/>
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="5dp"
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/aluminum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last name"
                    android:layout_marginRight="30dp"
                    android:textSize="15sp"/>
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/last_name_tv"
                    android:textSize="20sp"
                    android:paddingLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doe"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Role"
                    android:layout_marginRight="30dp"
                    android:textSize="19sp"/>
                <TextView
                    android:id="@+id/role_tv"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teacher"/>
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="5dp"
                android:orientation="vertical"
                android:layout_marginBottom="5dp"
                android:id="@+id/stud_id_ll"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/aluminum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ID"
                    android:layout_marginRight="30dp"
                    android:textSize="15sp"/>
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/stud_id_tv"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="Phan"/>
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="5dp"
                android:orientation="vertical"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/aluminum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:layout_marginRight="30dp"
                    android:textSize="15sp"/>
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/email_tv"
                    android:textSize="20sp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="johnDoe@example.com"/>
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="5dp"
                android:orientation="vertical"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/aluminum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:layout_marginRight="30dp"
                    android:textSize="15sp"/>
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/phone_tv"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="0166 626 5623"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_changePassword"
                    android:textSize="17dp"
                    android:text="Change password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/AppTheme.Button.Primary"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
