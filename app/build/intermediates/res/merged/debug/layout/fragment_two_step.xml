<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hoangdang.diemdanh.studentQuiz.TwoStepFragment">

    <LinearLayout
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:src="@drawable/ic_star_black_24dp"
            android:id="@+id/two_step_1"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageButton
            android:src="@drawable/ic_sentiment_satisfied_black_24dp"
            android:id="@+id/two_step_2"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageButton
            android:src="@drawable/ic_filter_vintage_black_24dp"
            android:id="@+id/two_step_3"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageButton
            android:src="@drawable/ic_flight_black_24dp"
            android:id="@+id/two_step_4"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</FrameLayout>
